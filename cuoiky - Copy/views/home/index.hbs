{{#section 'title'}}
    Trang chủ
{{/section}}

{{#section 'js'}}
    <script type="text/javascript">
        $('.addItem').on('click', function () {
            var proId = $(this).data('id');
            $('#txtP').val(proId);
            $('#frmAddToCart').submit();
        });
    </script>
{{/section}}

{{#if isEmpty }}
    Không có sản phẩm!
{{else}}
    <form id="frmAddToCart" method="post" action="/cart/add1">
        <input type="hidden" id="txtP" name="proId" />
        <input type="hidden" id="txtC" name="catId" value="{{catId}}" />
    </form>
    <div class="row">
        {{#each products }}
        <div id="auction-items">
            <div class="auction-items" cellpadding="0" cellspacing="0">
            <div class="auction-item" id="auction-item-46617">
                <div class="picture">
                    <a href="/product/detail/{{SanPhamId}}"><img src="/assests/product/{{SanPhamId}}/{{SanPhamId}}_1.jpg" border="0"></a>
                </div>
                <div class="title">
                    <a href="/product/detail/{{SanPhamId}}">{{TenSanPham}}</a>
                </div>
                <div class="rows-bids rows">Bids: <span class="bids rows">{{LuotRaGia}}</span>
            </div>
            <div class="rows-bid-price rows"><span class="last-bid-user rows">
                <span>Người bán:&nbsp;</span><span class="txtRed">>{{IdKHBan}}</span>
                <a href="/u/"></a>&nbsp;</span> <br>
                &nbsp;&nbsp;<span class="last-bid-price rows">{{GiaHienTai}}đ</span>
            </div>
            <div class="server-time-rows">
                <table>
                    <tbody><tr>
                        <td class="glasshour"></td>
                        <td id="time2">23 : 44 : 42</td>
                    </tr>
                </tbody></table>
            </div>
            {{#if ../layoutModels.isLogged }}
            <div class="submit-btn rows">
                <input readonly="true" class="price" type="text" value="110.000"><br><a title="Click để đặt giá" href="javascript:void(0);" class="btnBid" value="Bid" onclick="javascript:bid(this, 46617, 110000);return false;"><img src="/assests/images/btn-bid.jpg" border="0"></a>
            </div>
            {{/if}}
        </div>
        {{/each}}
    </div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            {{#if showPrevPage}}
                <li>
                    <a href="?page={{prevPage}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            {{/if}}
            {{#each pages }}
                {{#if isActive }}
                    <li class="active">
                        <a href="?page={{pageValue}}">{{pageValue}}</a>
                    </li>
                {{else}}
                    <li>
                        <a href="?page={{pageValue}}">{{pageValue}}</a>
                    </li>
                {{/if}}
            {{/each}}
            {{#if showNextPage }}
                <li>
                    <a href="?page={{nextPage}}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            {{/if}}
        </ul>
    </nav>
{{/if}}