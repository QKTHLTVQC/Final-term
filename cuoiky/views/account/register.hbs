{{#section 'js'}}
    <script type="text/javascript">
        // $('.datepicker').datepicker({
        //     format: 'd/m/yyyy',
        //     autoclose: true,
        // });

        $('#frmRegister').validate({
            rules: {
                hoten: {
                    required: true
                },
                matkhau: {
                    required: true,
                    minlength: 6
                },
                cmatkhau: {
                    equalTo: '#txtmatkhau'
                },
                diachi: {
                    required: true
                },
                email: {
                    required: true,
                    email: true
                },
                captchaCode: {
                    required: true,
                    equalTo: ValidBotBoot()
                }
            },

            messages: {
                hoten: {
                    required: 'Vui lòng nhập username.'
                },
                matkhau: {
                    required: 'Vui lòng nhập mật khẩu',
                    minlength: 'Mật khẩu phải dài ít nhất 6 ký tự'
                },
                cmatkhau: {
                    equalTo: 'Mật khẩu nhập lại chưa khớp'
                },
                diachi: {
                    required: 'Vui lòng nhập họ tên'
                },
                email: {
                    required: 'Vui lòng nhập email',
                    email: 'EMail không đúng định dạng'
                },
                captchaCode: {
                    required: 'Vui lòng nhập captcha',
                    equalTo: 'Captcha không đúng'
                }
            },

            errorElement: 'span',
            errorClass: 'help-block',

            highlight: function (element) {
                $(element)
                    .closest('.form-group')
                    .addClass('has-error');
            },

            success: function (label) {
                $(label)
                    .closest('.form-group')
                    .removeClass('has-error');

                label.remove();
            },
        });
    </script>
{{/section}}
{{#if showError }}
    <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Warning!</strong> {{ errorMsg }}
    </div>
{{/if}}

<form class="form-horizontal" method="post" action="" id="frmRegister">
    <div class="form-group">
        <label for="txtUsername" class="col-sm-2 control-label">Họ tên</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtHoTen" placeholder="Họ tên" name="hoten">
        </div>
    </div>
    <div class="form-group">
        <label for="txtPWD" class="col-sm-2 control-label">Mật khẩu</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="txtmatkhau" placeholder="Mật khẩu" name="matkhau">
        </div>
    </div>
    <div class="form-group">
        <label for="txtCPWD" class="col-sm-2 control-label">Nhập lại</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="txtcmatkhau" placeholder="Nhập lại password" name="cmatkhau">
        </div>
    </div>
    <div class="form-group">
        <label for="txtName" class="col-sm-2 control-label">Địa chỉ</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtName" placeholder="Địa chỉ" name="diachi">
        </div>
    </div>
    <div class="form-group">
        <label for="txtEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtEmail" placeholder="Email" name="email">
        </div>
    </div>
