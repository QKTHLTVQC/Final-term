<script type="text/javascript">
    var visible_items = $('#thumb-items img').length >= 10 ? 10 : $('#thumb-items img').length;
            
             $("#thumb-items").jCarouselLite({
                auto: 60000,
                visible: visible_items,
                start: 0,
                scroll: 1,
                hoverPause: true,
                btnNext: "#thumb-zone #thumb-control-right",
                btnPrev: "#thumb-zone #thumb-control-left",

            });  

            if (visible_items < 10) {
                $('#thumb-control-right,#thumb-control-left').unbind('click');
            }

            $("#thumb-items").trigger('endCarousel');
            
            $('#thumb-items img').hover(function() {
                console.log($(this).attr('src'));
                $('.auction-images img').attr('src', $(this).attr('src'));
            });
</script>