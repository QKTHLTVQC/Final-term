{{#section 'title'}}
    Đấu giá sản phẩm
{{/section}}

{{#section 'css'}}
    <link href="/assets/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <style type="text/css">
        label {
            font-weight: normal !important;
        }
    </style>
{{/section}}

{{#section 'js'}}
    <script src="/assets/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="/assets/jquery-validation-1.12.0/jquery.validate.min.js"></script>
    <script type="text/javascript">
        $('.datepicker').datepicker({
            format: 'd/m/yyyy',
            autoclose: true,
        });

        $('#frmPost').validate({
            rules: {
                name: {
                    required: true
                },
                img: {
                    required: true,
                    minimgs: 3
                },
                startprice: {
                     required: true
                },
                pricestep: {
                    required: true
                },
                buyprice: {

                },
                productcart: {

                },
                timepost: {
                    required: true
                },
                detal: {
                    required: true
                },
                isAutoUpdate:{

                }
            },

            messages: {
                username: {
                    required: 'Vui lòng nhập tên sản phẩm.'
                },
                img: {
                    required: 'Vui lòng chọn hình',
                    minlength: 'Ít nhất 3 hình minh họa'
                },
                startprice: {
                    required: 'Vui lòng nhập giá'
                },
                pricestep: {
                    required: 'Vui lòng nhập bước giá'
                },
                productcart: {
                },
                buyprice: {
                },
                timepost: {
                    required: 'Vui lòng chọn ngày đăng'
                },
                detal: {
                    required: 'Vui lòng đăng mô tả sản phẩm'
                }
                isAutoUpdate:{

                }
            },

            errorElement: 'span',
            errorClass: 'help-block',

            highlight: function (element) {
                $(element)
                    .closest('.form-group')
                    .addClass('has-error');
            },

            success: function (label) {
                $(label)
                    .closest('.form-group')
                    .removeClass('has-error');

                label.remove();
            },
        });
    </script>
{{/section}}

{{#if showError }}
    <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong> {{ errorMsg }} </strong>
    </div>
{{/if}}

<span style="text-align: center; padding: 10px; text-transform: uppercase;"><h2>Đấu giá sản phẩm</h2></span>

<form class="form-horizontal" method="post" action="" id="frmPost">
    <div class="form-group">
        <label for="txtNameProduct" class="col-sm-2 control-label">Tên sản phẩm</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtNameProduct" placeholder="Tên sản phẩm" name="productname">
        </div>
    </div>
    <div class="form-group">
        <label for="inputImage" class="col-sm-2 control-label">Hình ảnh</label>
        <div class="col-sm-4">
            <div class="fileinput fileinput-new" data-provides="fileinput">
                <span class="btn btn-info btn-file">
                    <span class="fileinput-new">Select file</span>
                    <span class="fileinput-exists">Change</span>
                    <input type="file" accept="image/*" name="imgdetail">
                </span>
                <span class="fileinput-filename"></span>
                <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="float: none">&times;</a>
            </div>
            <input type="file" class="form-control" id="inputImage" name="img2">
            <input type="file" class="form-control" id="inputImage" name="img3">
        </div>
     </div>
    <div class="form-group">
        <label for="txtStartPrice" class="col-sm-2 control-label">Giá khởi điểm</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtStartPrice" placeholder="Giá khởi điểm" name="startprice">
        </div>
    </div>
    <div class="form-group">
        <label for="txtProductCart" class="col-sm-2 control-label">Loại danh mục</label>
        <div class="col-sm-4">
            <select class="form-control" id="txtProductCart" name="productcart">
                {{#each layoutModels.categories }}
                <option value="{{DanhMucId}}">{{TenDanhMuc}}</option>
                {{/each}}
             </select>
         </div>
    </div>
    <div class="form-group">
        <label for="txtStep" class="col-sm-2 control-label">Bước giá</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtStep" placeholder="Bước giá" name="pricestep">
        </div>
    </div>
    <div class="form-group">
        <label for="txtBuy" class="col-sm-2 control-label">Giá mua ngay</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtBuy" placeholder="Giá mua ngay" name="buyprice">
        </div>
    </div>
    <div class="form-group">
        <label for="txtTimePost" class="col-sm-2 control-label">Ngày đăng</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtTimePost" name="timepost" value="" readonly>
        </div>
    </div>
    <div class="form-group">
        <label for="txtDetail" class="col-sm-2 control-label">Mô tả</label>
        <div class="col-sm-8">
            <!-- <textarea class="ckeditor" cols="80" rows="10" id="txtDetail" name="detal"></textarea> -->
            <textarea name="detal"></textarea>
        </div>
    </div>
    <div class="form-group">>
        <label for="checkAutoUpdate" class="col-sm-4 control-label">
          <input type="checkbox" name="isAutoUpdate" value="1"> Tự động gia hạn
        </label>
        <div class="col-sm-4">
        </div>
    </div>
    <script type="text/javascript">DrawBotBoot();</script>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success" onclick="return ValidBotBoot();">
            <i class="fa fa-check"></i>
            Đăng
            </button>
        </div>
    </div>
</form>
<script>
    CKEDITOR.replace( 'detal' );
</script>